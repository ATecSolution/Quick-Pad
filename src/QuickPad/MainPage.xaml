<Page
    x:Class="QuickPad.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="using:QuickPad.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:QuickPad"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <!--  MenuBar  -->
            <RowDefinition Height="Auto" />
            <!--  TextBox  -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Controls:MenuBar
            x:Name="MenuBarControl"
            Grid.Row="0"
            NewFileInvoked="{x:Bind mainViewModel.NewFileCommand}"
            ToggleWordWrapInvoked="{x:Bind mainViewModel.ToggleWordWrapCommand}" />

        <RichEditBox
            x:Name="RichEditControl"
            Grid.Row="1"
            FontFamily="{x:Bind mainViewModel.Font, Mode=OneWay}"
            FontSize="{x:Bind mainViewModel.FontSize, Mode=OneWay}"
            TextWrapping="{x:Bind settingsViewModel.TextWrap, Mode=OneWay}" />
    </Grid>
</Page>
