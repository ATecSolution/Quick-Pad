<ContentDialog
    x:Class="QuickPad.UI.Common.Dialogs.GoToLine"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:extensions="using:Microsoft.Toolkit.Uwp.UI.Extensions"
    mc:Ignorable="d"
    Title="Go To Line"
    PrimaryButtonText="Go To"
    CloseButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    Background="{x:Bind VTSelector.CurrentItem.BackgroundAcrylicBrush, Mode=OneWay}">

    <Grid>
        <TextBox Header="Line number:" 
                 InputScope="Number" 
                 extensions:TextBoxRegex.ValidationMode="Dynamic" 
                 extensions:TextBoxRegex.ValidationType="Number"/>
    </Grid>
</ContentDialog>
